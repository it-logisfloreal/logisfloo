<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="logisfloo_product_form_view">
        <field name="name">logisfloo.product.form.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="beesdoo_product.beesdoo_product_form" />
        <field name="arch" type="xml">
        	<field name="list_price" position="after">
    	    	<field name="total_with_margin" widget='monetary' options="{'currency_field': 'currency_id'}"/>
    	    	<field name="reference_price" widget='monetary' options="{'currency_field': 'currency_id'}"/>
    	    </field>
        	<field name="type" position="after">
    	    	<field name="producer"/>
    	    </field>
    	    
			<!-- remove unused fields and buttons -->    	    
    	    <xpath expr="//button[@name='generate_barcode']" position="replace"/>
    	    <field name="barcode" position="replace"/>
    	    <field name="suggested_price" position="replace"/>
    	    <group name="stock_property" position="replace"/>
    	    <group name="group_lots_and_weight" position="replace"/>
 
    	    <!-- remove unused pages/tabs -->
    	    <!-- Since Odoo 9.0 string cannot be used as a selector, so I'm using the xpath with page index -->
    	    <!-- removing in reverse order so the index is easier to track -->
    	    <xpath expr="//page[4]" position="replace"/> <!-- removes the unnamed "Scale labels" page, we don't have a scale with label printing --> 
            <xpath expr="//page[3]" position="replace"/> <!-- removes the unnamed "Label", we don't print label to display in the shop --> 
    	    
    	    <!-- 
    	    	TODO remove the actions to print labels and set label as printed 
    	    	see wizard/view/remove_label_printing_utils ... but it does not work ??
    	    	The system doesn't find the act_window ! but finds other elements ...grrr...
    	    -->
    	    
		</field>        	  	
    </record>
    
    <record id="logisfloo_product_template_tree_view" model="ir.ui.view">
        <field name="name">logisfloo.product.template.tree.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
        	<field name="standard_price" position="after">
        		<field name="list_price"/>
        	</field>
            <field name="volume" position="replace"/>
            <field name="weight" position="replace"/>
            <field name="type" position="replace"/>
        </field>
    </record>
    
</odoo>